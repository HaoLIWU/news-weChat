/* pages/mine/mine.wxss */
page{
  background-color: #F5F5DC;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;  
}
/* 点击登录按钮 */
.loginButton{ 
  margin-top: 180rpx;
}
/* 头像 */
.avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 90rpx 30rpx 44rpx;
  border-radius: 50%;
  border: 6rpx solid #ccc;
}
/* 昵称 */
.nickname {
  color: #333;
  position: absolute;
  font-size: 22px;
  text-align: center;
}


/* 头像背景 */
.bgimg{
  position: relative;
  top: 0;
  width: 100%;
  height: 400rpx;
  background-color: #fffafa;
}

/* 意见反馈*/
.adv{
  position: absolute;
  left:78%;
  bottom: 5%;
}

.advise{
  width: 30rpx;
  height:30rpx;  
}
.advisetxt{
  color: #333;
  font-size: 14px;
}
/* 收藏 */
.cell{
  width: 50%;
  float: left;
}
.cell-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 185rpx;
  width: 342rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  background-color: white;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.1) inset;
}

.collect-item,.comment-item{
  margin: 30rpx auto 15rpx;
}
.about-item,.message-item{
  margin: 15rpx auto 30rpx;
}
.Icon{
  width: 70rpx;
  height: 70rpx;
}
.txt{
  font-size: 16px;
}
